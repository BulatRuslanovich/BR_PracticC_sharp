@using KeyShop.Data
@model IEnumerable<Game>

@{
}

 	<div class="album py-5 bg-light">
        <div class="container">
			<div class="row">
				@foreach(var item in Model) {
				
					<div class="col-md-4">
						<div class="card mb-4 box-shadow">
							<img class="card-img-top" src="@item.Images[0]" width="100%" height="225" alt="Card image cap">
							<div class="card-body">
								<p class="card-text">@item.Title</p>
								<p class="card-text">@item.Genre</p>
								<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											<a type="btn btn-success" asp-controller="Game" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
											@if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin)) {
												<a type="btn btn-success" asp-controller="Game" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
												<a type="btn btn-success" asp-controller="Game" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
											}
										</div>
									<small class="text-muted">Price: @item.Price rubs</small>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
   		</div>
 	</div>
